{
  "compilerOptions": {
    "outDir": "./build",
    "rootDir": "./src/extension",
    "module": "esnext",
    "target": "es2015",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "lib": ["dom", "dom.iterable", "esnext", "es2015"],
    "types": ["chrome"],
    "resolveJsonModule": true
  },
  "include": ["src/extension/**/*.ts"]
}
